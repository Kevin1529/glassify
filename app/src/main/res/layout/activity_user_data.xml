<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".User_Data">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Garbage Photo"
        android:layout_marginTop="5dp"
        android:textStyle="bold|italic"
        android:fontFamily="serif"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"/>
    <ImageView
        android:id="@+id/image"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/ic_baseline_add_photo_alternate_24" />

    <TextView
        android:id="@+id/user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image"
        android:layout_marginTop="40dp"
        android:padding="15dp"
        android:text="Name"
        android:fontFamily="serif"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/user_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_name"
        android:layout_marginTop="15dp"
        android:padding="15dp"
        android:fontFamily="serif"
        android:text="address"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/user_phno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_address"
        android:layout_marginTop="15dp"
        android:fontFamily="serif"
        android:padding="15dp"
        android:text="Phone Number"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="normal" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@id/user_phno"
        android:spinnerMode="dropdown"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:padding="10dp"
        />

    <Button
        android:id="@+id/assignDriver"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_below="@id/spinner"
        android:layout_centerInParent="true"
        android:layout_marginTop="15dp"
        app:backgroundTint="#50C2C9"
        android:text="Assign Driver" />
</RelativeLayout>